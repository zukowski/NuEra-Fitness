<% @taxons = @taxon && @taxon.parent ? @taxon.parent.children : Taxon.roots  %> 
<%= form_tag products_url, :method => :get do %>
  <%= submit_tag '', :name => nil, :class => 'search-submit' %>
  <%= text_field_tag :keywords, params[:keywords] %>
<% end %>

<script type="text/javascript">
	$(document).ready(function() {
		$("#header input#keywords").focus(function() {
			if($(this).val() == 'Find a product') {
				$(this).val('');
				$(this).css('color','#ffffff');
			}
		});
		$("#header input#keywords").blur(function() {
			if($(this).val() == '') {
				$(this).val('Find a product');
				$(this).css('color','#bbbbbb');
			}
		});
		$("#header input#keywords").blur();
	});
</script>