    <h3>Billing Details</h3>
    <table>
      <tr>
        <td>Customer Details</td>
        <td><%= customer_details @order.bill_address %></td>
      </tr>
      <tr>
        <td>Email:</td>
        <td><%= mail_to @order.email %></td>
      </tr>
      <tr>
        <td>Phone Number:</td>
        <td><%= @order.bill_address.phone %></td>
      </tr>
      <tr>
        <td>Order Date</td>
        <td><%= @order.completed_at %></td>
      </tr>
      <tr>
        <td>IP Address:</td>
        <td></td>
      </tr>
      <tr>
        <td>Payment Method</td>
        <td><%= PaymentMethod.find_with_destroyed(@order.payment.payment_method_id).name %></td>
      </tr>
      <tr>
        <td>Transaction Id</td>
        <td></td>
      </tr>
      <tr>
        <td>Payment Status</td>
        <td><%= @order.payment_state.humanize %></td>
      </tr>
      <tr>
        <td colspan="2">
          <% @order.payment.actions.each do |action| %>
            <%= button_to t(action), fire_admin_order_payment_path(@order, @order.payment, :e => action), :remote => true, :method => :put %>
          <% end %>
        </td>
      </tr>
    </table>
