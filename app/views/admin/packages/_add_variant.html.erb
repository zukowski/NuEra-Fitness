<%= csrf_meta_tag %>

<div id="add-product">
  <fieldset>
    <legend><%= t(:add_variant) %></legend>
    <div style="float:left; width: 65%; margin-right: 5%">
      <%= label_tag :add_variant_name, t(:name_or_sku) %>
      <%= text_field_tag :add_variant_name, nil, :class => 'fullwidth title' %>
      <%= hidden_field_tag :add_variant_id %>
    </div>
    <div style="float: left; width: 15%; padding-top: 17px;">
      <%= link_to text_for_button_link(t(:add), :icon => 'add'),
          admin_product_package_path(@product),
          {:id => 'add_variant_to_package', :class => 'button', 'data-update' => 'variants-wrapper'} %>
    </div>
  </fieldset>
</div>

<%= javascript_include_tag 'admin/packages/edit.js' %>
